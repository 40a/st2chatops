[Unit]
Description=StackStorm service st2hubot
After=network.target

[Service]
Type=simple
User=st2
Group=st2
Environment="DAEMON_ARGS=''"
EnvironmentFile=-/etc/sysconfig/st2hubot
WorkingDirectory=/opt/stackstorm/hubot
ExecStart=bin/hubot $DAEMON_ARGS
TimeoutSec=60
PrivateTmp=true
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
